<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ConfirmationActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/confirmation_view"
        android:longClickable="true">

        <ImageView
            android:layout_width="220dp"
            android:layout_height="240dp"
            android:id="@+id/confirmation_image"
            android:focusable="true"
            android:layout_above="@+id/time_label"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="11:06 PM"
            android:id="@+id/time_label"
            android:capitalize="characters"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:singleLine="true"
            android:gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Sep 15, 2013"
            android:id="@+id/date_label"
            android:capitalize="characters"
            android:textSize="30dp"
            android:textStyle="normal"
            android:textAlignment="center"
            android:singleLine="true"
            android:gravity="center_horizontal"
            android:layout_below="@+id/time_label"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="34.312342341234, -98.2314234234"
            android:id="@+id/gps_label"
            android:layout_below="@+id/date_label"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirmation_button"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/gps_label"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:onClick="onConfirm" />

    </LinearLayout>

</RelativeLayout>
